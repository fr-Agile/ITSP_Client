<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
	    <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="ColorBackTheme">
        <item name="android:windowNoTitle">true</item>
	    <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:background">@color/base</item>
	    <!-- <item name="android:editTextStyle">@style/MyEditText</item> -->
	    <item name="android:textColor">@color/light_gray</item>
    </style>

    <style name="MyActionBar" parent="android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/base</item>
	    <item name="android:textColor">@color/light_gray</item>
	    <item name="android:titleTextStyle">@style/MyActionBar.TitleTextStyle</item>
    </style>

    <style name="MyActionBar.TitleTextStyle" parent="@android:style/TextAppearance">
	    <item name="android:textColor">@color/light_gray</item>
	</style>

    <style name="MyEditText" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/rounded_corner_light</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textCursorDrawable">@drawable/logo</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
		<item name="android:layout_marginLeft">5dp</item>
		<item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="MyButton" parent="@android:style/Widget.Button">
		<item name="android:background">@drawable/rounded_corner_dark</item>
		<item name="android:textColor">@color/light_gray</item>
    </style>

    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>
    
    <style name="RegisterFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>
</resources>